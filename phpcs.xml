<?xml version="1.0"?>
<ruleset name="RH">
  <description>RH Coding Standards</description>

  <!-- Scan these files -->
  <file>src</file>
  <file>rh-editor-block-starter.php</file>

  <!-- Only check php files -->
  <arg name="extensions" value="php"/>

  <!-- Show colors in console -->
  <arg name="colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>

  <!-- Use PSR-12 as a base -->
  <rule ref="PSR12"/>

</ruleset>
